#Get the outputs: swaymsg -t get_outputs
#
# This is the default profile for when only the laptop screen is connected
profile {
    output eDP-1 enable
}

# Profile for when the Dell monitor is connected (docked)
profile {
    output eDP-1 disable
    output DP-1 enable mode 3440x1440 position 0,0
}

profile {
    output eDP-1 disable
    output HDMI-A-1 enable mode 5120x1440 position 0,0
}
